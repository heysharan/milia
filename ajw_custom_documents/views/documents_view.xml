<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="documents_view_list_inherit" model="ir.ui.view">
            <field name="name">documents list inherit</field>
            <field name="model">documents.document</field>
            <field name="inherit_id" ref="documents.documents_view_list"/>
            <field name="arch" type="xml">
                <field name="owner_id" position="after">
                    <field name="expiry_date"/>
                </field>
            </field>
        </record>


        <record id="documents_expiry_view_kanban_inherit" model="ir.ui.view">
            <field name="name">documents kanban inherit</field>
            <field name="model">documents.document</field>
            <field name="inherit_id" ref="documents.document_view_kanban"/>
            <field name="arch" type="xml">
                <field name="owner_id" position="after">
                    <field name="expiry_date"/>
                </field>
            </field>
        </record>

        <record id="view_document_form_expiry_date" model="ir.ui.view">
        <field name="name">document.form.expiry.date</field>
        <field name="model">documents.document</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <field name="expiry_date"/>
                    </group>
                </sheet>
               <footer>
                    <button special="save" data-hotkey="q" string="Update" class="btn btn-primary"/>
                    <button special="cancel" data-hotkey="x" string="Discard" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_expiry_date_form" model="ir.actions.act_window">
        <field name="name">Set Expiry Date</field>
        <field name="res_model">documents.document</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_document_form_expiry_date"/>
        <field name="target">new</field>
    </record>

    </data>
</odoo>